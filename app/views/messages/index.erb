<% @messages.each do |message| %>
<dic class="message">
  <h3><a href="/messages/<%= message.id %>"</a><%= message.title %> <small>(by: <%= message.author %>)</small></h3>
  <p>
    <%= message.content %><small>(<%= message.url %>)</small>
  </p>
</div>
<% end %>

