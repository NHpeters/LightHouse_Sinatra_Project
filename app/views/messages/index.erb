<h3><a href="/messages/new">Click here to post your message!</a></h3>

<h2>MESSAGE BOARD:</h2>

<% @messages.each do |message| %>
<dic class="message">
  <h3><a href="/messages/<%= message.id %>"</a><%= message.title %> <small>(by: <%= message.author %>)</small></h3>
  <p>
    <%= message.content %>
  </p>
  <p>
    (link: <%= message.url %>)
  </p>
</div>
<% end %>
